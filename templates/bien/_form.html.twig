<div class="form">
    {{ form_start(form) }}
        <div class="form_row">
            {{ form_row(form.adresse) }}
        </div>
        <div class="form_row">
            {{ form_row(form.coordonnees, {'label' : 'Coordonnées'}) }}
        </div>
        <div class="form_row">
            {{ form_row(form.prix, {'label' : 'Prix (€)'}) }}
        </div>
        <div class="form_row">
            {{ form_row(form.superficie, {'label' : 'Superficie (m²)'}) }}
        </div>
        <div class="form_row">
            {{ form_row(form.images) }}
        </div>

        {% if app.request.attributes.get('_route') == 'app_bien_edit' %}
            <div class="imagesbox">
                <h2>Images</h2>
                {% for image in bien.images %}
                    <div>
                        <img class="imagesbien" src="{{ asset('/uploads/photos/') }}{{ image.url }}" alt="Image" width="150">
                        
                        {{ include('bien/_delete_image_form.html.twig') }}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        <div class="options">
            {{ include('bien/_delete_form.html.twig') }}

            <button class="btn btn-dark"><a href="{{ path('app_bien_index') }}">Retour</a></button>
            <button class="btn btn-dark" style="margin-left:10px;">{{ button_label|default('Ajouter') }}</button>
        </div>
    {{ form_end(form) }}
</div>